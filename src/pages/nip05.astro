---
import Layout from "../layouts/Layout.astro";
import Nip05Register from "../components/Nip05Register";
---

<Layout title="NIP-05 注册 - NostrZH">
  <div class="min-h-screen pt-32 pb-20 px-6">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-12">
        <h1
          class="text-4xl md:text-5xl font-bold mb-4 bg-linear-to-r from-purple-600 to-pink-600 dark:from-purple-400 dark:to-pink-400 bg-clip-text text-transparent"
        >
          NIP-05 注册
        </h1>
        <p class="text-slate-600 dark:text-slate-400 text-lg">
          注册您的 NIP-05 身份标识
        </p>
      </div>

      <Nip05Register client:load />
    </div>
  </div>
</Layout>
