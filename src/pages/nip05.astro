---
/**
 * NIP-05 注册页面
 */
import Layout from "../layouts/Layout.astro";
import Nip05Register from "../components/Nip05Register";
---

<Layout title="NIP-05 注册 - NostrZH">
  <div class="min-h-screen pt-32 pb-20 px-6">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gradient">
          NIP-05 注册
        </h1>
        <p class="text-text-secondary text-lg">
          注册您的 NIP-05 身份标识
        </p>
      </div>

      <Nip05Register client:load />
    </div>
  </div>
</Layout>
