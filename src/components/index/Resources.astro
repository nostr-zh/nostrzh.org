---
/**
 * Resources 组件 - 资源链接
 */
import { Star, FileText, BookOpen, Smartphone } from "@lucide/astro";
import Card from "../ui/Card.astro";

const resources = [
  {
    title: "Awesome Nostr 中文",
    description: "中文开发者的 Nostr 作品集，收录优秀的中文 Nostr 项目和资源。",
    url: "https://github.com/nostr-zh/awesome-nostr-zh",
    icon: Star,
  },
  {
    title: "Nostr 协议规范",
    description:
      "了解 Nostr 协议的技术细节，包括 NIP（Nostr Implementation Possibilities）。",
    url: "https://github.com/nostr-protocol/nips",
    icon: FileText,
  },
  {
    title: "Nostr.how",
    description: "Nostr 入门指南，帮助新手快速上手 Nostr 生态。",
    url: "https://nostr.how/zh",
    icon: BookOpen,
  },
  {
    title: "Nostr 客户端",
    description: "发现各种 Nostr 客户端，选择最适合你的应用。",
    url: "https://nostrapps.com/",
    icon: Smartphone,
  },
];
---

<section id="resources" class="py-24 relative overflow-hidden">
  <div class="absolute inset-0 bg-bg-primary"></div>
  <div
    class="absolute bottom-0 right-0 w-125 h-125 bg-gradient-glow-purple opacity-30 rounded-full blur-3xl translate-y-1/2 translate-x-1/4"
  >
  </div>

  <div class="max-w-6xl mx-auto px-6 relative">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-text-primary mb-4">
        资源与链接
      </h2>
      <p class="text-lg text-text-secondary max-w-2xl mx-auto">
        探索更多 Nostr 相关资源
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-6">
      {
        resources.map((resource) => (
          <a
            href={resource.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group"
          >
            <Card
              variant="default"
              padding="lg"
              hoverable={true}
              className="h-full!"
            >
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 rounded-xl bg-bg-tertiary flex items-center justify-center shrink-0 group-hover:bg-primary-100 dark:group-hover:bg-primary-900/50 transition-colors">
                  <resource.icon
                    class="text-text-tertiary group-hover:text-primary-500 dark:group-hover:text-primary-400 transition-colors"
                    size={20}
                  />
                </div>
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-text-primary group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors mb-2">
                    {resource.title}
                  </h3>
                  <p class="text-text-secondary text-sm leading-relaxed">
                    {resource.description}
                  </p>
                </div>
                <span class="text-text-tertiary group-hover:text-primary-500 group-hover:translate-x-1 transition-all">
                  →
                </span>
              </div>
            </Card>
          </a>
        ))
      }
    </div>
  </div>
</section>
