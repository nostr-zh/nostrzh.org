---
/**
 * Hero 组件 - 首页主视觉区域
 */
import FloatingAvatars from "./FloatingAvatars";
---

<section class="min-h-screen flex items-center justify-center relative overflow-hidden">
  {/* 背景渐变层 */}
  <div
    class="absolute inset-0"
    style="background: var(--gradient-hero)"
  ></div>

  {/* 装饰性光晕效果 */}
  <div
    class="absolute top-0 right-0 rounded-full blur-3xl pointer-events-none"
    style="width: 600px; height: 600px; background: var(--gradient-glow-purple); transform: translateY(-50%) translateX(33%); opacity: 0.6"
  ></div>
  <div
    class="absolute bottom-0 left-0 rounded-full blur-3xl pointer-events-none"
    style="width: 600px; height: 600px; background: var(--gradient-glow-indigo); transform: translateY(50%) translateX(-33%); opacity: 0.6"
  ></div>

  {/* 浮动头像背景 */}
  <FloatingAvatars client:load />

  {/* 网格图案 */}
  <div
    class="absolute inset-0 opacity-30 pointer-events-none"
    style="background-image: linear-gradient(to right, var(--color-border) 2px, transparent 2px), linear-gradient(to bottom, var(--color-border) 2px, transparent 2px); background-size: 60px 60px; mask-image: radial-gradient(ellipse 60% 50% at 50% 50%, #000 70%, transparent 100%)"
  ></div>

  {/* 内容区域 */}
  <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
    <div class="space-y-8">
      <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold text-gradient animate-fade-in-up">
        Nostr 中文社区
      </h1>

      <p
        class="text-xl md:text-2xl text-text-secondary mb-8 leading-relaxed animate-fade-in-up"
        style="animation-delay: 0.1s"
      >
        连接每一个自由表达的声音
        <br />
        <span class="text-lg text-text-tertiary">
          去中心化 · 抗审查 · 开放协议
        </span>
      </p>

      <div
        class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up"
        style="animation-delay: 0.2s"
      >
        <a
          href="#about"
          class="px-8 py-3 bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg transition-all duration-300 shadow-glow hover:shadow-xl hover:-translate-y-0.5"
        >
          了解 Nostr
        </a>
        <a
          href="#relay"
          class="px-8 py-3 glass border border-border text-text-primary hover:border-primary-500 hover:text-primary-600 dark:hover:text-primary-400 font-medium rounded-lg transition-all duration-300 hover:shadow-md hover:-translate-y-0.5"
        >
          加入社区
        </a>
      </div>
    </div>
  </div>

  {/* 底部渐变遮罩 */}
  <div
    class="absolute bottom-0 left-0 right-0 h-32 pointer-events-none"
    style="background: linear-gradient(to top, var(--color-bg-primary), transparent)"
  ></div>
</section>

<style>
  /* 入场动画 */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
</style>
