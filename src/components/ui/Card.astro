---
/**
 * Card 组件 - 统一的卡片样式
 *
 * @param variant - 卡片变体: default | elevated | outlined | flat
 * @param padding - 内边距: none | sm | md | lg
 * @param hoverable - 是否可悬停
 * @param className - 额外的类名
 */
interface Props {
  variant?: "default" | "elevated" | "outlined" | "flat";
  padding?: "none" | "sm" | "md" | "lg";
  hoverable?: boolean;
  className?: string;
}

const {
  variant = "default",
  padding = "md",
  hoverable = false,
  className = "",
} = Astro.props;

// 基础样式
const baseClasses = [
  "rounded-xl",
  "transition-all",
  "duration-250",
  "ease-out",
];

// 变体样式
const variantClasses: Record<string, string[]> = {
  default: ["bg-bg-card", "border", "border-border", "shadow-md"],
  elevated: ["bg-bg-card", "shadow-xl", "shadow-primary-500/10"],
  outlined: ["bg-bg-card", "border-2", "border-border"],
  flat: ["bg-bg-secondary"],
};

// 内边距样式
const paddingClasses: Record<string, string> = {
  none: "",
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
};

const hoverClasses = hoverable
  ? ["hover:shadow-lg", "hover:border-border-hover", "hover:-translate-y-0.5"]
  : [];

const classes = [
  ...baseClasses,
  ...variantClasses[variant],
  paddingClasses[padding],
  ...hoverClasses,
  className,
]
  .filter(Boolean)
  .join(" ");
---

<div class={classes}>
  <slot />
</div>
